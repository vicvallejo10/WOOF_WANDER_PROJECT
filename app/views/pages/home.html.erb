
<!-- Main Content -->
<div>
  <% if user_signed_in? %>
    <!-- Display content for logged-in users -->
    <h1 class="text-center">Hi, <%= current_user.first_name %> <%= current_user.last_name %>!</h1>
    <!-- Add additional content for logged-in users -->
    <!-- Check if the user has pets -->
    <% if current_user.pets.any? %>
      <!-- Display the user's pets -->
      <div class="row">
        <% current_user.pets.each do |pet| %>
          <div class="col-12 col-md-6 col-lg-4 mb-4">
            <div class="card shadow">
              <img src="http://via.placeholder.com/640x360" class="card-img-top" alt="Pet Image">
              <div class="card-body">
                <h5 class="card-title"><%= pet.pet_name %></h5>
                <p class="card-text">Breed: <%= pet.breed %></p>
                <a href="/accountinformation" class="btn btn-primary btn-block">View Details</a>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <!-- If the user does not have pets, display an "Add New Pet" button and a "Get Started" text -->
      <div class="col-12 col-md-6 col-lg-4 mb-4">
        <div class="card shadow">
          <div class="card-body">
            <h5 class="card-title">Get Started</h5>
            <p class="card-text">You don't have any pets yet. Click below to add a new pet!</p>
            <a href="/accountinformation" class="btn btn-primary">Add New Pet</a>
          </div>
        </div>
      </div>
    <% end %>


    <%#
    <!-- Recommendation of the Day -->
    <div class="row mt-4">
      <div class="col-12">
        <div class="card shadow">
          <img src="https://static.actu.fr/uploads/2021/04/jardin-du-luxembourg-paris-patrimoine-histoire-policiers-prefecture-de-police-masque-covid19-coronavirus-senat.png" class="card-img-top" alt="Recommendation Image">
          <div class="card-body">
            <h5 class="card-title">Recommendation of the Day</h5>
            <p class="card-text">You might like to checkout: Jardin du Luxembourg - 75006 Paris</p>
            <a href="#" class="btn btn-primary btn-block">Checkout this place</a>
          </div>
        </div>
      </div>
    </div> %>

    <!-- Button to go explore -->
    <div class="row mt-12">
      <div class="col-12">
        <a href="/places" class="btn btn-lg btn-primary btn-block">Explore places near me</a>
      </div>
    </div>
  <% else %>
    <!-- Display content for guests -->
    <div class="welcome text-center">
      <h1>Welcome to Woof Wander!</h1>
    </div>

    <div class="features mt-4">
      <h2 class="text-center">Discover the World with Your Pet</h2>
      <ul class="text-center">
        <li>Find pet-friendly places</li>
        <li>Explore pet-friendly activities and attractions</li>
        <li>Read user reviews and recommendations</li>
      </ul>
    </div>

    <div class="call-to-action mt-4 text-center">
      <h2>Ready to Get Started?</h2>
      <p>Log in or sign up now to start exploring pet-friendly destinations!</p>
      <div class="action-buttons">
        <%= link_to "Log In", new_user_session_path, class: "btn btn-primary mr-2 btn-block" %>
        <%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary btn-block" %>
      </div>
    </div>

    <div class="social-proof mt-4 text-center">
      <h2>Join Thousands of Happy Users</h2>
      <p>Discover why pet owners love Woof Wander!</p>
      <!-- Add social proof elements such as user counts or ratings here -->
    </div>
  <% end %>
</div>

<!-- Footer -->
<footer class="mt-4 text-center">
  <p>Contact us at support@woofwander.com for assistance.</p>
  <!-- Add footer links or copyright information here -->
</footer>
