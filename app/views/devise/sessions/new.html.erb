<%= content_for(:navbar_class, "navbar-home") %>
<div class="login-container">
  <div class="logo-devise">
  </div>

  <h2>Login</h2>

  <div class="simple-form">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email", placeholder: "Email" } %>
        <%= f.input :password, required: false, input_html: { autocomplete: "current-password", placeholder: "Password" } %>
        <%= f.input :remember_me, as: :boolean, label: "Remember Me", inline_label: true if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "login-button" %>
      </div>
    <% end %>
  </div>

  <div class="links">
    <%= render "devise/shared/links" %>
  </div>
</div>
