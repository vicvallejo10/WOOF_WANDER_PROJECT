<!-- app/views/lists/index.html.erb -->
<h1>Your Favorites</h1>
<% if @lists.any? %>
  <ul>
    <% @lists.each do |list| %>
    <% saved_place = Place.find(list.place_id) %>
      <li><%= saved_place.place_name %> (<%= link_to 'Remove', list_path(saved_place.id), method: :delete %>)</li>
    <% end %>
  </ul>
<% else %>
  <p>No favorites yet.</p>
<% end %>
